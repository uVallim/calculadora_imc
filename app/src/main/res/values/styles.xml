<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.CalculadoraIMC" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="android:textColorPrimary">@color/dark_gray</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/dark_green</item>
    </style>

    <!-- Estilo para títulos -->
    <style name="TituloTexto">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo para textos de feedback -->
    <style name="TextoFeedback">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Estilo para botões primários -->
    <style name="BotaoPrimario">
        <item name="android:backgroundTint">@color/light_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Estilo para botões secundários -->
    <style name="BotaoSecundario">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Estilo para campos de entrada -->
    <style name="CampoEntrada">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>